ll mul(ll a, ll b, ll p){
    ll ans = 0;
    a %= p;
    while(b){
        if(b & 1) ans = (ans + a) % p;
        a = (a * 2) % p;
        b >>= 1;
    }
    ans %= p;
    return ans;
}
ll ksm(ll a, ll b, ll p){
    ll ans = 1;
    a %= p;
    while(b){
        if(b & 1) ans = mul(ans, a, p) % p;
        a = mul(a, a, p) % p;
        b >>= 1;
    }
    ans %= p;
    return ans;
}
